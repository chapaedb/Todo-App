<%- include('partials/header') %>

    <h1>Todo List</h1>
    <div class="table-container">
    <div>
        <a  class="btn" href='/addtodo'>Add todo</a>
    </div>
    <br>
    <table>
        <tr>
            <th>
            Title
            </th>
            <th>Description</th>
            <th>Created at</th>
            <th>Updated at</th>
            <th>Action</th>
        </tr>
        <% for(let i = 0; i < todos.length; i ++) { %>
            <tr>
                <td><%= todos[i].title %></td>
                <td><%= todos[i].desc %></td>
                <td><%= moment(todos[i].createdAt).format("MM DD, YY, HH:mm:ss") %> </td>
                <td><%= moment(todos[i].updatedAt).format("MM DD, YY, HH:mm:ss") %></td>
                <td>
                    <a class="btn" href="/update-todo?id=<%= todos[i]._id %>">Edit</a>
                    <a class="btn" href="/deletetodo?id=<%= todos[i]._id %>">Delete</a>
    
                </td>
            </tr>

        <% } %>
        
        
    </table>
    </div>
<%- include('partials/footer') %>